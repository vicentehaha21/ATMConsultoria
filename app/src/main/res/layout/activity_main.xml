<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.15"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline2"
            app:layout_constraintGuide_percent="0.85"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:scaleType="centerCrop" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent" android:contentDescription="Logo ATM Consultoria"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_cliente" android:background="@drawable/menu_cliente"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_empresa"
            android:background="@drawable/menu_empresa" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_servicos" android:background="@drawable/menu_servico"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/button_cliente"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_contato"
            android:background="@drawable/menu_contato" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/button_empresa"/>
</android.support.constraint.ConstraintLayout>